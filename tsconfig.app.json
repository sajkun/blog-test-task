{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/**/*"],
  //   "exclude": ["src/**/__tests__/*"],
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true,
  "compilerOptions": {
    //  "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/vue",
      "./node_modules/@yandex/ymaps3-types",
      "./src/shared/types"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./node_modules/*"]
    }
  }
}
